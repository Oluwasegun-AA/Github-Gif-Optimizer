{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "max-len": [1, 80, 2],
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "import/no-named-as-default": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",
    "react/no-did-update-set-state": [0, 0],
    "react/forbid-prop-types": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "react/destructuring-assignment": 0,
    "jsx-a11y/alt-text": 0,
    "jsx-a11y/anchor-has-content": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "react/require-default-props": 0,
    "no-shadow": 0,
    "import/no-unresolved": [2, { "commonjs": true , "amd": true}],
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2
  },
  "globals": {
    "Materialize": true,
    "React": true,
    "window": true,
    "$": true,
    "document": true,
    "localStorage": true,
    "componentDidMount": true,
    "describe": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js",".jsx",".png"]
      }
    }
  }
}
